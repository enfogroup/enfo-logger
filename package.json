{
  "name": "enfo-logger",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "git@bitbucket.org:enfogroupcloud/enfo-logger.git",
  "author": "Calle Kabo <calle@kabohub.co.nz>",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf ./dist ./docs",
    "build-webpack": "webpack --config webpack.config.js",
    "build": "npm-run-all -s clean build-webpack",
    "lint": "eslint 'test/**/*.ts' 'src/**/*.ts'",
    "jest": "jest",
    "test": "npm-run-all -s lint jest",
    "test-watch": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "eslint": "^6.6.0",
    "eslint-config-standard": "14.1.0",
    "eslint-config-standard-pure-fp": "^2.0.1",
    "eslint-plugin-better": "^0.1.5",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-standard": "4.0.1",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.5",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "typescript": "^3.6.2",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.7",
    "winston": "^3.2.1"
  },
  "peerDependencies": {
    "winston": "^3.2.1"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig-eslint.json"
    },
    "plugins": [
      "@typescript-eslint",
      "security"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:security/recommended",
      "standard-pure-fp"
    ],
    "rules": {
      "array-bracket-spacing": [
        "error",
        "always"
      ],
      "better/no-new": "off",
      "computed-property-spacing": [
        "error",
        "always"
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "fp/no-rest-parameters": "off",
      "indent": [
        "error",
        2,
        {
          "ignoreComments": true,
          "SwitchCase": 1,
          "flatTernaryExpressions": true
        }
      ],
      "no-console": "off",
      "no-multi-spaces": [
        "error",
        {
          "ignoreEOLComments": true
        }
      ],
      "no-unused-vars": "off",
      "one-var": [
        "error",
        "consecutive"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn jest"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint"
    ],
    "test/**/*.ts": [
      "eslint"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "/test/.*\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  }
}
