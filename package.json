{
  "name": "@enfo/logger",
  "version": "2.0.0",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": "git@github.com:enfogroup/enfo-logger.git",
  "author": "Calle Kabo <calle@kabohub.co.nz>",
  "license": "MIT",
  "homepage": "https://github.com/enfogroup/enfo-logger",
  "bugs": {
    "url": "https://github.com/enfogroup/enfo-logger/issues"
  },
  "private": false,
  "scripts": {
    "cm": "git-cz",
    "clean": "rm -rf ./dist",
    "build-webpack": "webpack --config webpack.config.js",
    "build": "npm-run-all -s clean build-webpack",
    "prerelease": "yarn test && yarn build",
    "copy-to-dist": "cp package.json dist/ && cp *.md dist/ && cp .npmignore dist/",
    "release": "standard-version --no-verify",
    "lint": "eslint 'test/**/*.ts' 'src/**/*.ts'",
    "jest": "jest",
    "test": "npm-run-all -s lint jest",
    "test-watch": "jest --watch"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.20.0",
    "eslint-config-standard": "16.0.2",
    "eslint-config-standard-pure-fp": "^2.0.1",
    "eslint-plugin-better": "^0.1.5",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-standard": "5.0.0",
    "husky": "4.x",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "standard-version": "^9.1.1",
    "ts-jest": "^26.5.1",
    "ts-loader": "^8.0.17",
    "typescript": "^4.1.5",
    "webpack": "^5.23.0",
    "webpack-cli": "^4.5.0",
    "winston": "^3.3.3"
  },
  "peerDependencies": {
    "winston": "^3.2.1"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig-eslint.json"
    },
    "plugins": [
      "@typescript-eslint",
      "security"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:security/recommended",
      "standard-pure-fp"
    ],
    "rules": {
      "array-bracket-spacing": [
        "error",
        "always"
      ],
      "better/no-new": "off",
      "computed-property-spacing": [
        "error",
        "always"
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "fp/no-rest-parameters": "off",
      "indent": [
        "error",
        2,
        {
          "ignoreComments": true,
          "SwitchCase": 1,
          "flatTernaryExpressions": true
        }
      ],
      "no-console": "off",
      "no-multi-spaces": [
        "error",
        {
          "ignoreEOLComments": true
        }
      ],
      "no-unused-vars": "off",
      "one-var": [
        "error",
        "consecutive"
      ]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && yarn jest"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint"
    ],
    "test/**/*.ts": [
      "eslint"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "standard-version": {
    "scripts": {
      "prerelease": "yarn prerelease",
      "postchangelog": "yarn copy-to-dist",
      "posttag": "echo 'Now run cd dist/ && yarn publish && cd ../ && git push --follow-tags origin master'"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "/test/.*\\.ts$",
    "modulePathIgnorePatterns": [
      "<rootDir>/dist"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  }
}
